{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./src",
        "outDir": "./lib"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "!./node_modules/**/*.ts"
    ],
    "files": [
      "./src/interfaces.ts",
      "./src/model.ts",
      "./src/nested-model.ts",
      "./src/collection.ts",
      "./src/index.ts",
      "./src/object.ts",
      "./src/paginated-collection.ts"
    ]
}